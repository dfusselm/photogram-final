<div>
  <div>
    <h1>
      <%= @the_user.username %>
    </h1>

      
    <dl>
      <dt>
        Private
      </dt>
      <dd>
        <%= @the_user.private %>
      </dd>

      <dt>
        Followers
      </dt>
      <dd>
        <%#= @the_user.followers? %>
      </dd>

      <dt>
        Following
      </dt>
      <dd>
        <%#= @the_user.following? %>
      </dd>
   
    </dl>
  </div>
</div>

<ul>
    <li><a href="/users/<%= @the_user.username %>">Profile</a></li>
    <li><a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a></li>
    <li><a href="/users/<%= @the_user.username %>/feed">Feed</a></li>
    <li><a href="/users/<%= @the_user.username %>/discover">Discover</a></li>

    </ul>

<h2>Own Photos (<%= @the_user.own_photos.size %>)</h2>

<table border = "1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th>Likes</th>
    <th></th>
  </tr>

  <% @the_user.own_photos.each do |a_photo| %>
  <tr>
    <td>
    <img src="<%= a_photo.image %>" alt="">
    </td>
    <td><%= a_photo.poster.username %></td>
    <td><%= a_photo.caption %></td>
    <td><%= time_ago_in_words(a_photo.created_at) %></td>
    <td><%= a_photo.likes_count %></td>
    <td><a href="/photos/<%= a_photo.id %>">Show details</a></td>
  </tr>

  <% end %>


</table>


<hr>
<hr>
<hr>
<hr>

<div>
  <div>
    <h1>
      Photo details
    </h1>

 
    <dl>
      <dt>
      Image
      </dt>
      <dd><img src="<%= @the_photo.image %>" alt="">
      </dd>
      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_photo.poster.username %>
      </dd>

      <dt>
      Posted
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>


      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes_count %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments_count %>
      </dd>

      <dt>
        Fans
      </dt>
      <dd>
        <% @the_photo.fans.each do |a_fan| %>
          <%= a_fan.username%>
          <% end %>
      </dd>

      <dt>
        Add a fan
      </dt>
      <dd>
        <%#= time_ago_in_words(@the_photo.updated_at) %> add a like button
      </dd>

      <dt>Edit photo</dt>
      <dd>
      <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      

        <label for="image_box">
          Image URL
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_photo.image %>">


      <label for="caption_box">
          Caption
        </label>
       <textarea id="caption_box" name="query_caption"><%= @the_photo.caption %></textarea>

      <button>
        Update photo
      </button>
      </form>
      <%#need to fix this form because it needs to store something for the other parts of a photo%>
      </dd>
      
      <dt>Delete photo</dt>
      <dd><a href="/delete_photo/<%= @the_photo.id %>">
          Delete this photo</a></dd>

    </dl>
  </div>
</div>

<hr>



<h2>Comments</h2>

<table>
<tr>
  <th>Commenter</th>
  <th>Comment</th>
  <th>Posted</th>
</tr>

  <% @the_photo.comments.each do |a_comment| %>
  <tr>
  <td><%= a_comment.commenter.username %> </td>
  <td><%= a_comment.body %> </td>
  <td><%= time_ago_in_words(a_comment.created_at) %> ago</td>
  </tr>
  <% end %>

</table>


