

<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<div>
    <% if current_user != nil %>
      
    <form action="/insert_photo" method="post">
      <div>
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="2"></textarea>
      </div>

       <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

     
      <button>
        Add photo
      </button>
    </form>
    <% end %>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
          
        </th>
        
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <% private_status = a_photo.poster.private %>
      <% if private_status == false %>
        
       <tr>
        <td>
          <img src="<%= a_photo.image %>" alt="">
        </td>

        <td><%= a_photo.caption %></td>

        <td>
          <%= a_photo.poster.username %>
        </td>

    <td><%= time_ago_in_words(a_photo.created_at) %></td>
    <td><%= a_photo.likes_count %></td>
    <td><a href="/photos/<%= a_photo.id %>">Show details</a></td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
